<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">
	
	<import resource="classpath*:spring-config/dime-controllers-applicationContext.xml" />
	
	<!-- credentialStore is a Singleton -->
	<bean id="credentialStore" class="eu.dime.ps.gateway.auth.impl.CredentialStoreImpl" factory-method="getInstance" lazy-init="false" scope="singleton"></bean>
	
	<bean id="transformer" 
	    class="eu.dime.ps.gateway.transformer.impl.XSparqlTransformer"/>
	
	<bean id="policyManager" 
	    class="eu.dime.ps.gateway.policy.PolicyManagerImpl"/>
	
	<context:annotation-config/>
	
		
</beans>